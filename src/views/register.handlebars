<div class="register-container">
  <div class="register-form">
    <h2 class="register-title">Register</h2>
    <form action="/api/sessions/register" method="post">
      <input type="text" name="web" value="web" hidden />
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          name="first_name"
          placeholder="First Name"
          required
        />
      </div>
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          name="last_name"
          placeholder="Last Name"
          required
        />
      </div>
      <div class="mb-3">
        <input
          type="email"
          class="form-control"
          name="email"
          placeholder="Email"
          required
        />
      </div>
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          name="age"
          placeholder="Age"
          required
        />
      </div>
      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="mb-3">
        <button
          type="submit"
          class="btn btn-primary btn-block login-btn"
        >Register</button>
      </div>
    </form>
    <div class="login-link">
      Already registered?
      <a href="/login">Login</a>
    </div>
  </div>
</div>